<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/ivImgCartProduct"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/nike_offwhite_x_airjodan1" />

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTenSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Sản Phẩm"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Kích Cỡ: xx" />

            <TextView
                android:id="@+id/tvColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Màu Sắc: xx" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGia"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="$00.0"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_cart_reduce"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/btn_color_detail"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="20dp"></TextView>

                    <TextView
                        android:id="@+id/item_cart_quanlity"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:text="01"
                        android:textSize="22dp"></TextView>

                    <TextView
                        android:id="@+id/item_cart_add"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_color_detail"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="20dp"></TextView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="48dp"
            android:layout_height="32dp" />
    </LinearLayout>
</LinearLayout>